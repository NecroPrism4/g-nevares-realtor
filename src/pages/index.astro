---
import AboutIntro from "../components/AboutIntro.astro";
import ContactCta from "../components/ContactCta.astro";
import ContactForm from "../components/ContactForm.astro";
import FeaturedListings from "../components/FeaturedListings.astro";
import Hero from "../components/Hero.astro";
import Services from "../components/Services.astro";
import Neighborhoods from "../components/Neighborhoods.astro";
import ClientReviews from "../components/ClientReviews.astro";
import WorkProcess from "../components/WorkProcess.astro";
import MainLayout from "../layouts/MainLayout.astro";
import siteConfig from "../site.config";
---

<MainLayout
  activePage="inicio"
  pageTitle={siteConfig.title + " – Real Estate Agent en Puerto Peñasco"}
  showSubscribeForm={false}
  showNav={false}
>
  <Hero />
  <AboutIntro />
  <Services />
  <FeaturedListings />
  <WorkProcess />
  <ClientReviews />
  <Neighborhoods />
  <ContactCta />
  <section id="contact" class="mx-auto my-20 w-[min(1200px,100%-2rem)]">
    <div class="grid gap-8 rounded-2xl border border-neutral-200 bg-white/80 p-8 shadow-[0_24px_60px_rgba(15,23,42,0.12)] lg:grid-cols-[1.1fr_0.9fr] lg:items-start">
      <ContactForm heading="Contáctame" subheading="Escríbeme y recibe atención personalizada." />
      <div class="rounded-2xl border border-neutral-200 bg-neutral-900 p-6 text-white shadow-lg">
        <p class="text-[0.65rem] uppercase tracking-[0.35em] text-white/60">Información de contacto</p>
        <h3 class="mt-3 text-lg font-semibold uppercase tracking-[0.08em]">Respuesta rápida</h3>
        <p class="mt-3 text-sm text-white/75">
          Experiencia manejando transacciones en ambos lados de la frontera con atención personalizada.
        </p>
        <div class="mt-6 space-y-3 text-sm text-white/80">
          <div>
            <strong class="text-white">Email:</strong> Gilberto@goOceano.com
          </div>
          <div>
            <strong class="text-white">Tel:</strong> U.S. (623) 565-1978 | MX (656) 223-4824
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
