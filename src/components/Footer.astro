---
import siteConfig from "../site.config";
const currentYear = new Date().getFullYear();
---

<footer class="mx-auto mt-20 w-[min(1200px,100%-2rem)] border-t border-neutral-300 pt-8 text-xs text-neutral-500">
  <div class="grid gap-6 lg:grid-cols-[1.2fr_0.8fr_0.8fr]">
    <div class="space-y-3">
      <p class="text-[0.7rem] uppercase tracking-[0.35em] text-neutral-400">Gilberto Nevárez</p>
      <p class="text-sm text-neutral-600">
        Agente inmobiliario en Puerto Peñasco. Todos los derechos reservados.
      </p>
    </div>
    <div class="flex flex-wrap gap-3 text-[0.65rem] uppercase tracking-[0.25em]">
      {siteConfig.footerNavLinks?.map((link) => (
        <a href={link.href} title={link.text} class="transition hover:text-neutral-900">
          {link.text}
        </a>
      ))}
    </div>
    <div class="flex flex-wrap gap-3 text-[0.65rem] uppercase tracking-[0.25em]">
      {siteConfig.socialLinks?.map((link) => (
        <a href={link.href} title={link.text} target="_blank" class="transition hover:text-neutral-900">
          {link.text}
        </a>
      ))}
    </div>
  </div>
  <div class="mt-6 text-[0.65rem] uppercase tracking-[0.25em] text-neutral-400">
    &copy; {currentYear} {siteConfig.title}
  </div>
</footer>
