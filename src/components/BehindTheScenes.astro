---
import Button from "./Button.astro";
import siteConfig from "../site.config";
---

<section id="behind-the-scenes" class="w-full px-4 my-16">
  <h2 class="mb-2">Behind the scenes</h2>
  <p class="mb-6">Tour snippets, quick tips, and market moments from the week.</p>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-3">
    <!-- Featured tall tile -->
    <div class="rounded-3xl border border-smoking-200 p-4 sm:col-span-1">
      <div class="w-full h-80 rounded-2xl bg-smoking-50 grid place-items-center text-smoking-600">
        Featured Reel
      </div>
      <p class="mt-3 text-sm">Walkthrough: prepping a condo for listing day.</p>
    </div>

    <!-- Horizontal scroll strip -->
    <div class="sm:col-span-2">
      <div class="overflow-x-auto [-ms-overflow-style:none] [scrollbar-width:none]">
        <div class="flex snap-x snap-mandatory gap-4">
          {
            Array.from({ length: 6 }).map((_, i) => (
              <div class="snap-start shrink-0 w-64 rounded-2xl border border-smoking-200 overflow-hidden">
                <div class="aspect-video w-full bg-smoking-50 grid place-items-center text-smoking-600">
                  Clip {i + 1}
                </div>
                <div class="p-3">
                  <p class="text-sm">Tip #{i + 1}: Simple staging that makes a difference.</p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
      <div class="mt-4">
        <Button href={siteConfig.socialLinks?.find((s) => s.text.toLowerCase().includes("tiktok"))?.href || "#"} class="bg-smoking-600 text-white hover:bg-smoking-700">Follow on TikTok</Button>
      </div>
    </div>
  </div>
</section>


