---
const { lat, lng, title = "Map" } = Astro.props as {
  lat: number;
  lng: number;
  title?: string;
};
const q = encodeURIComponent(`${lat},${lng}`);
const src = `https://www.google.com/maps?q=${q}&output=embed&z=14`;
---

<section class="w-full">
  <h2 class="sr-only">{title}</h2>
  <div class="rounded-xl overflow-hidden border border-smoking-200">
    <iframe
      title={title}
      src={src}
      width="100%"
      height="360"
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
      style="border:0;"
      allowfullscreen
    />
  </div>
</section>

