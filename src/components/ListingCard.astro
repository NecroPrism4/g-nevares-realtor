---
const {
  slug,
  title,
  price,
  currency = "USD",
  location,
  bedrooms = 0,
  bathrooms = 0,
  areaSqFt,
  imageUrl,
} = Astro.props as {
  slug: string;
  title: string;
  price: number;
  currency?: string;
  location: string;
  bedrooms?: number;
  bathrooms?: number;
  areaSqFt?: number;
  imageUrl?: string | null;
};
---

<a href={`/listings/${slug}`} class="group block overflow-hidden rounded-2xl border border-neutral-200 bg-white shadow-[0_18px_45px_rgba(15,23,42,0.08)] transition hover:-translate-y-1 hover:shadow-[0_24px_60px_rgba(15,23,42,0.16)]">
  <div class="relative aspect-4/3 overflow-hidden bg-neutral-100">
    {
      imageUrl
        ? <img src={imageUrl} alt={title} class="h-full w-full object-cover transition duration-500 group-hover:scale-105" loading="lazy" />
        : <div class="flex h-full w-full items-center justify-center text-sm text-neutral-400">Imagen no disponible</div>
    }
    <div class="absolute left-4 top-4 rounded-full bg-white/90 px-3 py-1 text-[0.65rem] uppercase tracking-[0.25em] text-neutral-900">
      {(new Intl.NumberFormat(undefined, { style: "currency", currency })).format(price)}
    </div>
  </div>
  <div class="space-y-2 p-5">
    <h3 class="text-base font-semibold uppercase tracking-[0.08em] text-neutral-900">{title}</h3>
    <p class="text-xs uppercase tracking-[0.2em] text-neutral-500">{location}</p>
    <div class="flex gap-4 text-xs text-neutral-500">
      <span>{bedrooms} bd</span>
      <span>{bathrooms} ba</span>
      {areaSqFt && <span>{areaSqFt} sqft</span>}
    </div>
    <span class="inline-flex items-center text-[0.65rem] uppercase tracking-[0.3em] text-neutral-900">
      Solicitar info â†’
    </span>
  </div>
</a>

