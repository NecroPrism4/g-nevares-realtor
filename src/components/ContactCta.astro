---
import { Image } from "astro:assets";
import siteConfig from "../site.config";
import Button from "./Button.astro";
import condo from "../assets/images/condo.jpg";
---

<section class="relative mx-auto my-20 w-[min(1200px,100%-2rem)] overflow-hidden rounded-2xl text-white shadow-2xl">
  <div class="absolute inset-0">
    <Image src={condo} alt="Condominio frente al mar" width={1600} height={900} class="h-full w-full object-cover" />
    <div class="absolute inset-0 bg-neutral-950/70"></div>
  </div>
  <div class="relative z-10 grid gap-4 px-8 py-12">
    <p class="text-[0.65rem] uppercase tracking-[0.35em] text-white/60">Contacto directo</p>
    <h2 class="text-2xl font-semibold uppercase tracking-[0.08em] sm:text-3xl">
      ¿Listo para tu próxima propiedad?
    </h2>
    <p class="max-w-2xl text-sm text-white/75 sm:text-base">
      Atención bilingüe y respuesta rápida para compradores en México y EE. UU.
    </p>
    <div class="mt-4 flex flex-wrap gap-3">
      <Button href="https://wa.me/526562234824" class="bg-white px-6 py-3 text-[0.7rem] uppercase tracking-[0.3em] text-neutral-900 hover:bg-white/90">
        Contactar por WhatsApp
      </Button>
      {siteConfig?.contactInfo?.email?.href && (
        <Button href="#contact" class="border border-white/70 bg-transparent px-6 py-3 text-[0.7rem] uppercase tracking-[0.3em] text-white hover:bg-white/10">
          Enviar mensaje
        </Button>
      )}
    </div>
  </div>
</section>


