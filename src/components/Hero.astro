---
import { Image } from "astro:assets";
import realtorImage from "../assets/images/g-nevarez-realtor.png";
import heroBackdrop from "../assets/images/hero-background.jpg";
import siteConfig from "../site.config";
import Button from "./Button.astro";
---

<header class="relative left-1/2 right-1/2 -mx-[50vw] w-screen overflow-hidden">
  <div class="absolute inset-0">
    <Image
      src={heroBackdrop}
      alt="Puerto Peñasco real estate"
      class="h-full w-full object-cover"
      width={1920}
      height={1080}
      loading="eager"
    />
    <div class="absolute inset-0 bg-gradient-to-r from-neutral-950/90 via-neutral-900/70 to-neutral-800/30"></div>
  </div>

  <div class="relative z-10">
    <nav class="mx-auto mt-6 flex w-[min(1200px,100%-2rem)] items-center justify-between gap-6 rounded-md border border-white/20 bg-white/10 px-6 py-3 text-white backdrop-blur-md">
      <div class="flex items-center gap-2">
        <span class="text-xs uppercase tracking-[0.35em] text-white/70">Gilberto Nevárez</span>
      </div>
      <div class="hidden items-center gap-6 text-[0.7rem] uppercase tracking-[0.25em] text-white/80 lg:flex">
        {siteConfig.headerNavLinks?.map((link) => (
          <a href={link.href} class="transition hover:text-white">{link.text}</a>
        ))}
      </div>
      <Button href="#contact" class="border border-white/70 bg-transparent px-5 py-2 text-[0.7rem] uppercase tracking-[0.25em] text-white hover:bg-white/10">
        Contáctame
      </Button>
    </nav>

    <div class="mx-auto grid w-[min(1200px,100%-2rem)] gap-10 px-6 pb-20 pt-14 lg:grid-cols-[1.1fr_0.9fr] lg:items-end">
      <div>
        {siteConfig.hero?.eyebrowText && (
          <span class="inline-flex rounded-full border border-white/60 px-3 py-1 text-[0.65rem] uppercase tracking-[0.35em] text-white/80">
            {siteConfig.hero?.eyebrowText}
          </span>
        )}
        <h1 class="mt-6 text-4xl font-semibold uppercase tracking-[0.18em] text-white sm:text-5xl lg:text-6xl">
          {siteConfig.hero?.title}
        </h1>
        <p class="mt-5 max-w-xl text-sm text-white/80 sm:text-base">
          {siteConfig.hero?.text}
        </p>
        <div class="mt-8 flex flex-wrap gap-3">
          {siteConfig.hero?.actions?.map((action, index) => (
            <Button
              href={action.href}
              class={index === 0
                ? "bg-white px-6 py-3 text-[0.7rem] uppercase tracking-[0.3em] text-neutral-900 hover:bg-white/90"
                : "border border-white/70 bg-transparent px-6 py-3 text-[0.7rem] uppercase tracking-[0.3em] text-white hover:bg-white/10"}
            >
              {action.text}
            </Button>
          ))}
        </div>
      </div>
      <div class="flex justify-center lg:justify-end">
        <div class="relative">
          <Image
            src={realtorImage}
            alt="Gilberto Nevarez - Realtor"
            width={520}
            height={680}
            class="h-[420px] w-auto rounded-xl object-cover shadow-[0_20px_50px_rgba(0,0,0,0.45)]"
            loading="eager"
          />
          <div class="absolute -bottom-6 left-1/2 w-[85%] -translate-x-1/2 rounded-full bg-white/90 px-4 py-2 text-center text-[0.65rem] uppercase tracking-[0.35em] text-neutral-900 shadow-lg">
            Puerto Peñasco · Sonora
          </div>
        </div>
      </div>
    </div>
  </div>
</header>


