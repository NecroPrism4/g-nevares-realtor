---
const { images = [], title = "Property gallery" } = Astro.props as {
  images?: string[];
  title?: string;
};
---

<section class="w-full">
  <h2 class="sr-only">{title}</h2>
  <div class="grid grid-cols-2 sm:grid-cols-3 gap-3">
    {
      images.map((src: string) => (
        <img src={src} alt={title} class="w-full h-40 sm:h-56 object-cover rounded-lg" loading="lazy" />
      ))
    }
  </div>
</section>

