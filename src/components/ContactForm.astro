---
const {
  heading = "Contacto directo",
  subheading = "Déjame tus datos y te responderé lo antes posible.",
  class: className,
} = Astro.props as {
  heading?: string;
  subheading?: string;
  class?: string;
};
---

<section class:list={["w-full", className]}>
  <h2 class="text-xl font-semibold uppercase tracking-[0.08em] text-neutral-900">{heading}</h2>
  <p class="mt-2 text-sm text-neutral-600">{subheading}</p>
  <form
    method="POST"
    action="https://formspree.io/f/xyyvlbqw"
    class="mt-6 grid grid-cols-1 gap-4 rounded-2xl border border-neutral-200 bg-white p-6 shadow-[0_18px_45px_rgba(15,23,42,0.08)] sm:grid-cols-2"
  >
    <div class="flex flex-col gap-1">
      <label for="name" class="text-sm text-slate-700">Nombre</label>
      <input id="name" name="name" required class="rounded-md border border-neutral-200 px-3 py-2" placeholder="Tu nombre" />
    </div>
    <div class="flex flex-col gap-1">
      <label for="email" class="text-sm text-slate-700">Email</label>
      <input id="email" name="email" type="email" required class="rounded-md border border-neutral-200 px-3 py-2" placeholder="tucorreo@email.com" />
    </div>
    <div class="sm:col-span-2 flex flex-col gap-1">
      <label for="message" class="text-sm text-slate-700">Mensaje</label>
      <textarea id="message" name="message" rows="4" class="rounded-md border border-neutral-200 px-3 py-2" placeholder="Cuéntame qué buscas y tu presupuesto aproximado." />
    </div>
    <div class="sm:col-span-2">
      <button class="button-link rounded-md bg-neutral-900 px-4 py-2 text-white transition hover:bg-neutral-800" type="submit">Enviar mensaje</button>
    </div>
  </form>
</section>

